  "repository": {
    "url": "https://github.com/ui8kit/form.git",
    "type": "git"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "dependencies": {
    "react-hook-form": "^7.62.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "bun-types": "^1.3.0",
    "typescript": "^5.6.3",
