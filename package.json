{
  "name": "@ui8kit/form",
  "version": "0.0.2",
  "description": "A collection of form for React Apps - 8px grid system components",
  "homepage": "https://ui.buildy.tw",
  "license": "MIT",
  "author": "ui8kit",
  "type": "module",
  "keywords": [
    "frontend",
    "form",
    "library",
    "tailwind",
    "utility-first",
    "react",
    "react-form",
    "form"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit",
