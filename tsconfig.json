{
  "include": ["./src"],
  "exclude": ["./lib", "./dist"],
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/form": ["./src/index"],
      "@/form/*": ["./src/*"],
      "@ui8kit/core": ["../core/src/index"],
      "@ui8kit/core/*": ["../core/src/*"]
    }
  },
  "references": [
    { "path": "../core" }
  ]
}